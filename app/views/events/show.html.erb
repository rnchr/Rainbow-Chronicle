<p id="notice"><%= notice %></p>

<%= raw show_header @event %>
<%= render :partial => 'shared/show_info', :locals => {:obj => @event, :show => [:owner, :phone, :website, :address, :hours]} %>

<%= render :partial => 'shared/rating_form', :locals => {:obj => @event, :rating => @rating, :rating_questions => @rating_questions}%>


<div class="show-ratings span9">
	<h3>Ratings (<%= @event.rating_string %> overall)</h2>
	<%= render :partial => 'ratings/rating', :collection => @ratings %>
</div>


