<%= gmaps4rails(@json) %>

<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Phone</th>
    <th>Address</th>
    <th>Website</th>
    <th>Lat</th>
    <th>Lng</th>
    <th>Picture</th>
    <th>Start</th>
    <th>End</th>
    <th>Timespan</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.phone %></td>
    <td><%= event.address %></td>
    <td><%= event.website %></td>
    <td><%= event.lat %></td>
    <td><%= event.lng %></td>
    <td><%= event.picture %></td>
    <td><%= event.start %></td>
    <td><%= event.end %></td>
    <td><%= event.timespan %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Event', new_event_path %>
