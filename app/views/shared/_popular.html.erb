<div class="row">

	<div class="span8">
		<h3 class="list-title" style="display:inline-block;">Hall of Fame</h3>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Last Updated</th>
					<th>Rating</th>
				</tr>
			</thead>
			<tbody>
				<% objs.each do |obj| %>
				<tr>
					<td><%= link_to obj.title, obj %></td>
					<td><%= obj.updated_at.strftime("%B %d, %Y") %></td>
					<td><%= obj.cached_rating.round(2) %>, <%= pluralize obj.ratings.count, 'vote' %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<br style="clear: both;" />
		<%= paginate objs %>
	</div>

</div>