<div class="form-cat-list">
<h3>Categories</h3>
<ul>
<% @categories.each do |root| %>
	<li><input type="checkbox" name="categories[]" value="<%= root[:id] %>" />
		<span class="root-cat"><%= raw "#{root[:name]}" %></span>
		<ul>
	<% root[:children].each do |child| %>
		<li><input type="checkbox" name="categories[]" value="<%= child[:id] %>" />
			<span class="child-cat"><%= raw "#{child[:name]}" %></span>
			<ul>
			<% child[:children].each do |level3|%>
				<li><input type="checkbox" name="categories[]" value="<%= level3[:id] %>" />
				<span class="child-cat"><%= raw "#{level3[:name]}" %></span>
			<% end %>
			</ul>
		</li>
	<% end %>
		</ul>
	</li>
<% end %>
</ul>
</div>