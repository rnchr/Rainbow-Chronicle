<h2>Sign in</h2>
<br>
<%= link_to "Sign in with Facebook", '/auth/facebook', :class => 'btn btn-info' %>
<br><br>
<h5>OR Sign in below:</h5><br>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
<div class="control-group">
  <%= f.label :email, :class => 'control-label' %>
	<div class="controls">
  	<%= f.email_field :email, :class => 'input-xlarge' %>
	</div>
</div>

<div class="control-group">
  <%= f.label :password, :class => 'control-label' %>
	<div class="controls">
  	<%= f.password_field :password, :class => 'input-xlarge' %>
	</div>
</div>

<div class="control-group">
		<%= f.label "Remember Me?", :class => "control-label" %>
		<div class="controls"><%= f.check_box :remember_me %></div>
	</div>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "links" %>