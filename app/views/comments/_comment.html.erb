<div class="comment">
	<div class="comment-meta span2">
<span class="comment-author"><strong><%= link_to comment.user.display_name, user_path(comment.user) %></strong> 
	on <%= comment.updated_at.strftime("%b %d at %R%p") %></span>
	</div>
	<div class="comment-body span4">
		<%= comment.body %><br />
		<small>
		<% if comment.user.eql? current_user %>
			<%= link_to 'Delete comment.', [comment.news, comment], :method => :delete, :confirm => 'Are you sure?' %>
		<% elsif user_signed_in? %> 
			<%= link_to 'Report this post.', report_post(comment) %>
		<% end %>
	</div>
<br class="clear" />
</div>
